      "requests": {
        "cpu": "700m",
        "memory": "1Gi"
      }
    },
    "bookkeeperStorage": {
      "index": {
        "className": "",
        "volumeSize": "10Gi"
      },
      "ledger": {
        "className": "",
        "volumeSize": "10Gi"
      },
      "journal": {
        "className": "",
        "volumeSize": "10Gi"
      }
    },
    "bookkeeperOptions": {
      "journalDirectories": "/bk/journal/j0,/bk/journal/j1,/bk/journal/j2,/bk/journal/j3",
