  "segmentStoreProperties": {
    "segmentStoreResources": {
      "limits": {
        "cpu": "2000m",
        "memory": "6Gi"
      },
      "requests": {
        "cpu": "1000m",
        "memory": "6Gi"
      }
    },
    "segmentStoreJVMOptions": [
      "-XX:+UseContainerSupport",
      "-XX:+IgnoreUnrecognizedVMOptions",
      "-XX:MaxDirectMemorySize=4g",
      "-Xmx1024m"
    ]
  },
  "zookeeperProperties": {
